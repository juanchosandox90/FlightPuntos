<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnSort"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <ListView
                android:id="@+id/onewayFlightList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/colorLightGray"
                android:dividerHeight="10dp" />

            <TextView
                android:id="@+id/txtOneWayFlightNotFound"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bgrounded"
                android:padding="15dp"
                android:text="The specified flight is not available at this time. Please try again later. "
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif"
            android:text="Sort"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>
